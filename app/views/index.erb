
<!-- list all the posts about the same city or country -->
<div class="row">
	<form class="navbar-form navbar-left" role="search" action="/search" method="post">
		<div class="form-group">
			<input type="text" class="form-control" name="city" placeholder="Search by city">
			<input type="text" class="form-control" name="country" placeholder="Search by country">
		</div>
		<button type="submit" class="btn btn-default">Search</button>
	</form>
</div>


<div class="pull-left">
	<ul class="list-unstyled">
		<% if @error %>
		<li><%= @error%></li>
		<% end %> 

		<% if @search_city %> 
				<% @search_city.posts.each do |post| %>
				<li><a href="/profile/<%= post.user_id %>"><%= post.title %></a></li>
				<% end %> 

		<% elsif	@search_country %> 
				<% @search_country.posts.each do |post| %>
				<li><a href="/profile/<%= post.user_id %>"><%= post.title %></a></li>
				<% end %> 
		<% end %> 

	

	</ul>
</div>