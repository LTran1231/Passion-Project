
<!-- list all the posts about the same city or country -->
<div class="search">
<%= erb :"_search", layout: false %>
</div>

<section class="search-results">
	<div class="error">
		<ul class="list-group">
			<% if @error %>
			<li><%= @error%></li>
			<% end %>
		</ul>
	</div>

	<div class="city">
		<ul class="list-group">
			<%= erb :"search/_result", locals: {city: @search_city }, layout: false %>
		</ul>
	</div>
</section>






