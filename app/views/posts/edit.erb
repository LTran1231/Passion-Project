<form action="/posts/<%= post.id %>/edit" method="POST" id="edit-post">
	<input type="hidden" name="_method" value="PUT">
	<div class="form-group">
		<br/><button type="submit" class="btn btn-default">Submit</button><br/>

		<br/><label for="title">Title</label>
		<input type="text" class="form-control" name="post[title]" value="<%= post.title %>">

		<br/><label for="location">Location</label>
		<input type="text" class="form-control" name="city" value="<%= post.city.city %>">
		<br/><input type="text" class="form-control" name="country" placeholder="Cuba">

		<br/><label for="travel_date">Travel Date</label>
		<input type="text" class="form-control" name="post[travel_date]" value="<%= post.travel_date %>">

		<label for="content">Content</label>
		<textarea class="form-control" id="post" rows="10" name="post[content]"><%= post.content %></textarea>
	</div>
</form
